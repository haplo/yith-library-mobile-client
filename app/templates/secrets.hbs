    <section class="full-height" data-position="current" {{bind-attr class="position"}}>

      <section data-type="sidebar">
        <header>
          <menu type="toolbar">
            <a href="#" {{action 'closeDrawer'}}>Done</a>
          </menu>
          <h1>Tags</h1>
        </header>
        <nav>
          <ul>
            {{#each tag in tags}}
              <li>
                <a href="#" {{action 'selectTag' tag.name }}>
                  {{current-tag tag.name selectedTag}}
                  {{tag.name}} ({{tag.count}})
                </a>
              </li>
            {{/each}}
          </ul>
        </nav>
      </section>

      <section id="secrets" role="region" {{bind-attr class="state"}}>
        <header class="fixed">
          <button {{action 'openDrawer'}}>
            <span class="icon icon-menu">menu</span>
          </button>
          <menu type="toolbar">
            <button {{action 'toggleSearch'}}>
              <span class="icon action-icon search">Search</span>
            </button>
            {{# if authManager.hasValidAccessToken}}
              <button {{action 'sync'}} {{bind-attr disabled="isSyncing"}}>
                {{#if isSyncing}}
                  <progress></progress>
                {{else}}
                  <span class="icon action-icon email-sync">Sync</span>
                {{/if}}
              </button>
            {{else}}
              <button {{action 'login'}}>
                {{#if isAuthorizing}}
                  <progress></progress>
                {{else}}
                  <span class="icon action-icon user">Log in</span>
                {{/if}}
              </button>
            {{/if}}
          </menu>
          <h1>{{title}}</h1>
        </header>
        <article class="content scrollable header">
          <header>
            {{view "secrets-search" id="search-form" active=isSearching}}
            <h2>
              {{secretsCount}} {{secretsNoun}}
              {{#if selectedTag}}
              <span class="tag">{{selectedTag}}</span>
              {{/if}}
            </h2>
          </header>

          <div data-type="list">
            <ul>
              {{#each secrets}}
                <li>
                  {{#link-to 'secret' id }}
                    <p>{{service}}</p>
                    <p>{{account}}</p>
                  {{/link-to}}
                </li>
              {{/each}}
            </ul>
          </div>
        </article>
      </section>
    </section>
    <section role="status" {{bind-attr class="statusClass"}}>
      <p>{{statusMessage}}</p>
    </section>

    {{outlet secret}}
