<section data-position="right" role="region" {{bind-attr class="position"}} {{action     "finishTransition" on="animationEnd"}} >
    <header class="fixed">
      {{#link-to 'secrets'}}
        <span class="icon icon-back">back</span>
      {{/link-to}}
      <h1>{{service}}</h1>
    </header>

    <article class="content scrollable header">
      {{view "secret-revealer" encryptedSecret=secret}}
      <header>
        <h2>Account</h2>
      </header>
      <p>{{account}}</p>

      {{#if notes}}
        <header>
          <h2>Notes</h2>
        </header>
        <p>{{notes}}</p>
      {{/if}}

      {{#if tags}}
        <header>
          <h2>Tags</h2>
        </header>
        <p>{{ tags }}</p>
      {{/if}}
    </article>
</section>